<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="300.0" prefWidth="400.0" style="-fx-border-color: #000000;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.CalculatorController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #afeeee;" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="inputTF1" alignment="CENTER_RIGHT">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="inputTF2" alignment="CENTER_RIGHT">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </TextField>
         </children>
      </HBox>
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0" style="-fx-background-color: #b0e0e6; -fx-border-color: #000000;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addNumbers" prefHeight="30.0" prefWidth="30.0" text="+">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="subtractButton" mnemonicParsing="false" onAction="#subtractNumbers" prefHeight="30.0" prefWidth="30.0" text="-">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="multiplyButton" mnemonicParsing="false" onAction="#multiplyNumbers" prefHeight="30.0" prefWidth="30.0" text="*">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
            <Button fx:id="divideButton" mnemonicParsing="false" onAction="#divideNumbers" prefHeight="30.0" prefWidth="30.0" text="/">
               <effect>
                  <DropShadow />
               </effect>
            </Button>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="126.0" prefWidth="377.0" style="-fx-background-color: #afeeee;" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="resultTF" alignment="CENTER_RIGHT" editable="false">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </TextField>
         </children>
      </HBox>
   </bottom>
</BorderPane>
